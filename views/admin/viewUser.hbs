<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

  
</head>
<body style="background-color:  DarkGray;">
  

 <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
        <div class="container-fluid">
            <a class="navbar-brand" href="">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/viewUser">Users</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/addCandidates">Candidates</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/result">Result</a>
                    </li>
            </div>
        
                <a class="nav-link active" style="color: aliceblue;" aria-current="page" href="#">Signout</a>

        </div>
    </nav>
</header>

<section>

  <h3 class="heading" style="text-align: center;margin-top: 25px; text-decoration: underline">USERS</h3>

      <div class="container mt-5">

        <table class="table  table-hover table-dark">
          <thead>
            <tr>
              <th scope="col">#</th>
               <th scope="col">Image</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>

            {{#each usersdata}}
            
            <tr>
              <th scope="row">1</th>
              <td></td>
              <td>{{this.name}}</td>
              <td>{{this.email}}</td>
              <td>

         {{#if this.blocked}} 

<!-- Use a form for the unblock button -->
<form action="/admin/unblock/{{this._id}}" method="post" style="display:inline;">
  <input type="hidden" name="_method" value="POST">
  <input type="hidden" name="userId" value="{{this._id}}">
  <input type="hidden" name="userName" value="{{this.name}}">
  <!-- Add more hidden input fields as needed -->

  <button type="submit" class="btn btn-success" style="width: 85px;">unblock</button>
</form>

{{else}}


<form action="/admin/block/{{this._id}}" method="post" style="display:inline;">
  <input type="hidden" name="_method" value="POST">
  <input type="hidden" name="userId" value="{{this._id}}">
  <input type="hidden" name="userName" value="{{this.name}}">
    <input type="hidden" name="email" value="{{this.email}}">

  <!-- Add more hidden input fields as needed -->

  <button type="submit" class="btn btn-danger" style="width: 85px;">block</button>
</form>

{{/if}} 

</td> 
    {{/each}}
          </tbody>
        </table>
</body>

</html>