<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

  

  </head>

<body style="background-color:  DarkGray;">


    <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
        <div class="container-fluid">
            <a class="navbar-brand" href="">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/viewUser">Users</a>
                    </li>

                     <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/viewcandidate">ViewCandidates</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/result">Result</a>
                    </li>
            </div>
        
                <a class="nav-link active" style="color: aliceblue;" aria-current="page" href="#">Signout</a>

        </div>
        
    </nav>

    
    
</header>

<a href="/admin/addCandidates">

    <button type="button" style="float: right; margin-top: 10px; margin-right: 10px;"
 class="btn btn-primary btn-lg">Add Candidates</button>
   
    </a> 

    <section>

      <h3 class="heading" style="text-align: center; margin-top: 25px;text-decoration: underline">VIEW CANDIDATES</h3>


      <div class="container mt-5">




        <table class="table table-hover table-dark">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Electoral Symbol</th>
              <th scope="col">Name</th>
              <th scope="col">Designation</th>
              <th scope="col">Edit</th>
             <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>

            {{#each viewdata}}

              <tr>
                <th scope="row">1</th>
                <td>

                  <img style="width: 50px; height:50px" src="/images/sign-images/{{this.Image}}" alt="">

                </td>
                <td>{{this.name}}</td>
                <td>{{this.designation}}</td>
                <td>

                  <form action="/admin/edit/{{this._id}}" method="get" style="display:inline;">
                  
                  <button
                    type="submit"
                    class="btn btn-success"
                    data-toggle="modal"
                    data-target="#exampleModalCenter"
                  >
                    edit
                  </button>
                </form>

                </td>

                <td>
<form action="/admin/delete/{{this._id}}" method="post" style="display:inline;">
  <button
    type="submit"
    class="btn btn-danger"
    data-toggle="modal"
    data-target="#exampleModalCenter"
  >
    Delete
  </button>
</form>
</td>


              </tr>

            {{/each}}

          </tbody>
        </table>

      </div>
    </section>

        

  </body>
</html>